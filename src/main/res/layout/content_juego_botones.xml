<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/bStart"
        android:onClick="evenboton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="10pt"
        android:text="START"
        android:textColor="red"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#d91515" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignBounds"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:columnCount="3"
        android:rowCount="3">


        <Button
            android:textSize="10pt"
            android:layout_column="0"
            android:layout_row="0"
            android:text="0"
            android:backgroundTint="#e3780c" />
        <Button
            android:textSize="10pt"
            android:layout_column="1"
            android:layout_row="0"
            android:text="1"
            android:backgroundTint="#39e313" />
        <Button
            android:textSize="10pt"
            android:layout_column="2"
            android:layout_row="0"
            android:text="2"
            android:backgroundTint="#d0cd0c" />
        <Button
            android:layout_marginTop="40dp"
            android:textSize="10pt"
            android:layout_column="0"
            android:layout_row="1"
            android:text="3"
            android:backgroundTint="#7f29ddcb" />
        <Button
            android:textSize="10pt"
            android:layout_column="1"
            android:layout_row="1"
            android:text="4"
            android:backgroundTint="#1659eb" />
        <Button
            android:textSize="10pt"
            android:layout_column="2"
            android:layout_row="1"
            android:text="5"
            android:backgroundTint="#770f91" />
        <Button
            android:layout_marginTop="40dp"
            android:textSize="10pt"
            android:layout_column="0"
            android:layout_row="2"
            android:text="6"
            android:backgroundTint="#5d0d29" />
        <Button
            android:textSize="10pt"
            android:layout_column="1"
            android:layout_row="2"
            android:text="7"
            android:backgroundTint="#402020" />
        <Button
            android:textSize="10pt"
            android:layout_column="2"
            android:layout_row="2"
            android:text="8"
            android:backgroundTint="#414b28" />
    </GridLayout>
</LinearLayout>
